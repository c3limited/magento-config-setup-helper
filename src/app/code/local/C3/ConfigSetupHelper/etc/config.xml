<?xml version="1.0"?>
<config>
    <modules>
        <C3_ConfigSetupHelper>
            <version>1.0.0</version>
        </C3_ConfigSetupHelper>
    </modules>
    <global>
        <models>
            <c3_configsetuphelper>
                <class>C3_ConfigSetupHelper_Model</class>
            </c3_configsetuphelper>
        </models>
        <blocks>
            <c3_configsetuphelper>
                <class>C3_ConfigSetupHelper_Blocks</class>
            </c3_configsetuphelper>
            <adminhtml>
                <rewrite>
                    <system_config_form_field>C3_ConfigSetupHelper_Block_System_Config_Form_Field</system_config_form_field>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <adminhtml>
        <events>
            <admin_system_config_section_save_after>
                <observers>
                    <c3_configsetuphelper>
                        <type>singleton</type>
                        <class>c3_configsetuphelper/observer</class>
                        <method>showSelectedConfig</method>
                    </c3_configsetuphelper>
                </observers>
            </admin_system_config_section_save_after>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <c3_configsetuphelper>
                                            <title>Configuration for Config Setup Helper</title>
                                        </c3_configsetuphelper>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <c3_configsetuphelper>
            <options>
                <enabled>1</enabled>
            </options>
        </c3_configsetuphelper>
    </default>
</config>
